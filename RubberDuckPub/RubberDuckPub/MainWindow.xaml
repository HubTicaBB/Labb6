<Window x:Class="RubberDuckPub.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RubberDuckPub"
        mc:Ignorable="d"
        Title="Ye Olde Rubber Duck Bar" Height="532.5" Width="1212.5">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="565*"/>
            <ColumnDefinition Width="86*"/>
            <ColumnDefinition Width="36"/>
            <ColumnDefinition Width="187*"/>
            <ColumnDefinition Width="185*"/>
        </Grid.ColumnDefinitions>
        <ListBox x:Name="BartenderListBox" HorizontalAlignment="Left" Height="213" Margin="31,174,0,0" VerticalAlignment="Top" Width="271"/>
        <Label x:Name="labelBartender" Content="Bartender" HorizontalAlignment="Left" Margin="31,151,0,0" VerticalAlignment="Top" Width="123"/>
        <ListBox x:Name="WaiterListBox" HorizontalAlignment="Left" Height="213" Margin="307,174,0,0" VerticalAlignment="Top" Width="271"/>
        <ListBox x:Name="GuestsListBox" HorizontalAlignment="Left" Height="213" Margin="583,174,0,0" VerticalAlignment="Top" Width="271" Grid.ColumnSpan="4"/>
        <Label x:Name="guestsLabel" Content="Guests" HorizontalAlignment="Left" Margin="583,151,0,0" VerticalAlignment="Top" Width="271" Grid.ColumnSpan="4"/>
        <Label x:Name="waiterLabel" Content="Waiter" HorizontalAlignment="Left" Margin="307,151,0,0" VerticalAlignment="Top" Width="271"/>
        <Button x:Name="openButton" Content="Open Bar" HorizontalAlignment="Left" Height="28" Margin="31,43,0,0" VerticalAlignment="Top" Width="185"/>
        <Label x:Name="labelBartender_Copy" Content="Bartender" HorizontalAlignment="Left" Margin="31,151,0,0" VerticalAlignment="Top" Width="123"/>
        <Label x:Name="labelBartender_Copy1" Content="Bartender" HorizontalAlignment="Left" Margin="31,151,0,0" VerticalAlignment="Top" Width="271"/>
        <Button x:Name="closeButton" Content="Close Bar" HorizontalAlignment="Left" Height="28" Margin="225,43,0,0" VerticalAlignment="Top" Width="185"/>
        <Label x:Name="contentLabel" Content="" HorizontalAlignment="Left" Height="213" Margin="160.5,174,0,0" VerticalAlignment="Top" Width="224" Grid.ColumnSpan="2" Grid.Column="3"/>
        <TextBlock x:Name="barStatusLabel" HorizontalAlignment="Left" Height="67" Margin="160.5,62,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="238" Grid.ColumnSpan="2" Grid.Column="3"/>
        <Label Content="Bar Status" HorizontalAlignment="Left" Height="28" Margin="151.5,34,0,0" VerticalAlignment="Top" Width="123" Grid.ColumnSpan="2" Grid.Column="3"/>
        <Button x:Name="panicButton" Content="Panic! (stop alll the threads)" HorizontalAlignment="Left" Height="28" Margin="159.5,410,0,0" VerticalAlignment="Top" Width="225" Grid.ColumnSpan="2" Foreground="Red" Grid.Column="3"/>
        <ComboBox x:Name="testComboBox" HorizontalAlignment="Left" Height="24" Margin="31,414,0,0" VerticalAlignment="Top" Width="271" SelectedIndex="0"/>
        <Label Content="Bar Content" HorizontalAlignment="Left" Height="28" Margin="160.5,149,0,0" VerticalAlignment="Top" Width="123" Grid.ColumnSpan="2" Grid.Column="3"/>
        <Button x:Name="testButton" Content="Test" HorizontalAlignment="Left" Margin="307,414,0,0" VerticalAlignment="Top" Width="123" Height="24" Click="testButton_Click"/>

    </Grid>
</Window>
